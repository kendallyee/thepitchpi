            $("[name='auto_reply']").on('switchChange.switch',function(){
                var currentValue = $(this).attr("value");
                var station = $(this).attr("id");
                $.ajax({
                    url: 'updateReplyFlag',
                    method: 'post',
                    data: {id: currentValue, _token: $('input[name="_token"]').val(), reply_flag: currentValue, station: station},
                    success: function(data){
                        //alert("Auto Reply has been Turned On");
                    },
                    error: function(){}
