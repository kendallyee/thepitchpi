<h2>Details of lock</h2>

<div>
    <table>
        <tr>
            <th>Lock Name</th>
            <th>Status</th>
            <th>Group</th>
            <th>Location</th>
            <th>Toggle Lock</th>
        </tr>
        <% @locks.each do |lock| %>
            <tr>
                <td><%= link_to lock.lock_name, user_lock_path(lock.id, current_user.id) %></td>
                <td><%= lock.status %></td>
                <td><%= lock.group %></td>
                <td><%= lock.location %></td>
                <td><!-- Rounded switch -->
                    <label class="switch">
                    <input type="checkbox">
                    <span class="slider round"></span>
                    </label>
                </td>
            </tr>
        <% end %>
    </table>
</div>
