<%= form_with scope: :locks, url: user_locks_path, local: true do |form| %>

    <div class="text-field">
    <%= form.label :lock_name %>
    <%= form.text_field :lock_name %>
    </div>


    <%= form.hidden_field :location %>


    <div class="drop-down">
    <%= form.label :group %>
    <%= form.text_field :group %>
    </div>

    <div class="drop-down">
    <label for="tracking">Rock Around the Clock!</label>
    <%= form.check_box :tracking, {}, true, false %>
    </div>

    <!-- coordinates text field-->
    <%= form.hidden_field :longitude ,:id =>"longitude_field" %>
    <%= form.hidden_field :latitude ,:id =>"latitude_field" %>

    <div class="submit-field">
        <%= form.submit "Register New Lock"%>
    </div>



<% end %>
