<div id="clearance" class="sign-up mx-auto text-center bg-form-custom border rounded shadow-lg p-3">
  <h2><%= t(".title") %></h2>

  <%= form_for @user do |form| %>
    <%= render partial: '/users/form', object: form %>

    <div class="submit-field">
      <%= form.submit "Sign Up", class:"btn btn-outline-success" %>
    </div>

    <div class="other-links">
      <%= link_to t("Already Registered? Sign In Now"), sign_in_path, class:"btn btn-link text-light" %>
    </div>
  <% end %>
</div>
