<%= form_for :session, url: session_path do |form| %>
  <div class="text-field text-center m-2">
    <%= form.text_field :email, type: 'email', placeholder:"EMAIL", class:"form-control mx-auto", style: "width: 35%;" %>
  </div>

  <div class="password-field text-center m-2">
    <%= form.password_field :password, placeholder:"PASSWORD", class:"form-control mx-auto", style: "width: 35%;" %>
  </div>

  <div class="submit-field text-center m-2">
    <%= form.submit "LOCK IN", class:"btn btn-secondary text-body" %>
  </div>

  <div class="other-links text-center m-2">
    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to t("or Sign Up"), sign_up_path, class:"text-white" %>
    <% end %>
  </div>
<% end %>
